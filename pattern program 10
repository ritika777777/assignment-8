#include<stdio.h>
int main()
{
    int i,j,count;
    for(i=1;i<=4;i++)
    {
        count=1;
        for(j=1;j<=7;j++)
        {
            if(j<=5-i || j>=3+i)
            {
                if(j<4)
                    printf("%d",count++);
                else
                {
                    if(i==1)
                        printf("%d",count--);
                    else
                        printf("%d",--count);

                    }
            }
            else
                printf(" ");

        }
        printf("\n");
         }
         getch();
}
